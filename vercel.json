{
  "version": 2,
  "framework": "django",
  "buildCommand": "./build_files.sh",
  "outputDirectory": "betting/betting_sim/staticfiles",
  "builds": [
    {
      "src": "wsgi.py",
      "use": "@vercel/python",
      "config": { 
        "maxLambdaSize": "15mb",
        "runtime": "python3.9"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/betting/betting_sim/staticfiles/$1"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/wsgi.py"
    }
  ],
  "env": {
    "PYTHONUNBUFFERED": "1",
    "DEBUG": "True",
    "DISABLE_MIGRATIONS": "1",
    "VERCEL": "1",
    "PYTHON_VERSION": "3.9",
    "DJANGO_SETTINGS_MODULE": "betting_project.production_settings"
  }
} 