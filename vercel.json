{
  "version": 2,
  "buildCommand": "bash setup-env.sh && bash vercel-build.sh",
  "installCommand": "echo 'Skipping automatic install'",
  "builds": [
    {
      "src": "betting/betting_sim/betting_project/wsgi.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb", "runtime": "python3.9" }
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "betting/betting_sim/staticfiles",
        "zeroConfig": true
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/betting/betting_sim/staticfiles/$1"
    },
    {
      "src": "/(.*)",
      "dest": "betting/betting_sim/betting_project/wsgi.py"
    }
  ],
  "env": {
    "PYTHONPATH": ".",
    "VERCEL_FORCE_PYTHON_VERSION": "3.9"
  }
} 